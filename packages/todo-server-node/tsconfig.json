{
//  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "esModuleInterop": true
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/.eslintrc.js"
  ]
}
